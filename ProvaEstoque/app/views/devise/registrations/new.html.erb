<h2>Cadastro</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, label: "Nome", autofocus: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, label: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, label: "Senha", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, label: "Confirmar senha", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
